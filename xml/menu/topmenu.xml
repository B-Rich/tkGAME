<tkmenu>
    <!--
            menu 'File'
    -->
    <menu label="_File">
        <command
            label="_Quit"
            accelerator="Ctrl+Q"
            command="@quit"
        />
    </menu>

    <!--
            menu 'Show'
    -->
    <menu label="_Show">
        <checkbutton
            label="Show statusbar"
            accelerator="Ctrl+T"
            command="@ToggleStatusbar"
            variable="show_statusbar"
        />
    </menu>

    <!--
            menu 'Help'
    -->
    <menu label="_Help">
        <command
            label="_About"
            accelerator="Ctrl+?"
            command="@MenuHelpAbout"
        />
    </menu>

</tkmenu>
