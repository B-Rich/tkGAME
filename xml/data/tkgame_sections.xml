<tksection>
    <!--
            MAIN SECTION: Games
    -->
    <section
        text="Games"
        image="games.gif"
    >
        <!--
                ARCADE GAMES SECTION
        -->
        <section
            text="Arcade games"
            image="arcade-games.gif"
        >
            <group>
                <item
                    text="Tetris-like Games"
                    image="tetris-like-games.gif"
                    main="tetris.py"
                    package="tetris"
                    src="https://github.com/tarball69/tkGAME/raw/master/games/tetris.zip"
                />
                <item
                    text="Scrolling Arcade Games"
                    image="scrolling-arcade-games.gif"
                    main="super-marcello.pyw"
                    package="super_marcello"
                    src="https://github.com/tarball69/tkGAME/blob/master/games/super-marcello.zip"
                />
                <item/>
            </group>
            <group>
                <item/>
                <item/>
                <item/>
            </group>
            <group>
                <item/>
                <item/>
                <item/>
            </group>
            <group>
                <item/>
                <item/>
                <item/>
            </group>
        </section><!-- Arcade Games -->

        <!--
                REFLEXION GAMES SECTION
        -->
        <section
            text="Reflexion Games"
            image="reflexion-games.gif"
        >
        </section><!-- Reflexion Games -->

        <!--
                CARD GAMES SECTION
        -->
        <section
            text="Card Games"
            image="card-games.gif"
        >
        </section><!-- Card Games -->

    </section><!-- MAIN SECTION: Games -->

    <!--
            MAIN SECTION: Game Editors
    -->
    <section
        text="Game Editors"
        image="game-editors.gif"
    >
        <!--
                ARCADE GAMES SECTION
        -->
        <section
            text="Arcade Games"
            image="arcade-games.gif"
        >
            <item
                text="Tetris-like Games"
                image="tetris-like-games.gif"
                package="tetris_editor"
                type="editor"
            />
            <item
                text="Scrolling Arcade Games"
                image="scrolling-arcade-games.gif"
                package="sag_editor"
                type="editor"
            />
        </section><!-- Arcade Games -->

        <!--
                REFLEXION GAMES SECTION
        -->
        <section
            text="Reflexion Games"
            image="reflexion-games.gif"
        >
        </section><!-- Reflexion Games -->

        <!--
                CARD GAMES SECTION
        -->
        <section
            text="Card Games"
            image="card-games.gif"
        >
        </section><!-- Card Games -->

    </section><!-- MAIN SECTION: Game Editors -->

</tksection>
